<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontAttribute="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/Root_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.feedme.feedme.common.view.TextViewStyled
                android:id="@+id/Feed_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:padding="@dimen/margin_small"
                android:text="@string/feed_title"
                fontAttribute:family="Raleway"
                fontAttribute:weight="Bold" />

            <com.feedme.feedme.common.view.TextViewStyled
                android:id="@+id/Feed_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:padding="@dimen/margin_small"
                android:text="@string/feed_description"
                fontAttribute:family="Raleway"
                fontAttribute:weight="SemiBold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>